.PHONY: all
all: image_write_tb

VERILATOR=verilator
VERILATOR_ROOT ?= $(shell bash -c 'verilator -V | grep VERILATOR_ROOT | head -1 | sed -e "s/^.*=\s*//"')
VINC := $(VERILATOR_ROOT)/include

obj_dir/Vimage_write.cpp: ../hdl/image_write.v
	$(VERILATOR) -I../hdl --trace -cc ../hdl/image_write.v

obj_dir/Vimage_write__ALL.a: obj_dir/Vimage_write.cpp
	make --no-print-directory -C obj_dir -f Vimage_write.mk

image_write_tb: image_write.cpp obj_dir/Vimage_write__ALL.a
	g++ -I$(VINC) -I obj_dir $(VINC)/verilated.cpp \
		$(VINC)/verilated_vcd_c.cpp image_write.cpp \
		obj_dir/Vimage_write__ALL.a -o image_write_tb

.PHONY: clean
clean:
	rm -rf obj_dir/ image_write_tb image_write.vcd
